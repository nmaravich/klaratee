<div class="content-section">
<div class="suppliers-minor-color long-heading">
   <h3>Add Supplier</h3>
</div>

<div class="klaratee-form">
   <% form_for(@supplier, :html => {:class => 'uniForm'}) do |f| %>
   <%= f.error_messages %>
   
   <div style="display:block;clear:both;">
   <fieldset class="inlineLabels"> 

   <div class="ctrlHolder">
      <%= f.label :company_name %>
      <%= f.text_field :company_name %>
   </div>
   <div class="ctrlHolder">
      <%= f.label 'Address' %>
      <%= f.text_field :address1 %>
   </div>
   <div class="ctrlHolder">
      <%= f.label :city %>
      <%= f.text_field :city %>
   </div>
   <div class="ctrlHolder">
      <%= f.label :state %>
      <%= f.text_field :state %>
   </div>
   <div class="ctrlHolder">
      <%= f.label :zip %>
      <%= f.text_field :zip %>
   </div>
   <div class="ctrlHolder">
      <%= f.label :phone_number %>
      <%= f.text_field :phone_number %>
   </div>
   <div class="ctrlHolder">
      <%= f.label :fax %>
      <%= f.text_field :fax %>
   </div>
   
   <%= @supplier.dynamo_fields_p(f) %>
      	 
   <div class="ctrlHolder">
      <%= f.submit 'Create' %>
   </div>
   
   </fieldset>
   </div>
   <% end %>
   
 </div>
 
<script type="text/javascript">
 $(function(){
   $('form.uniForm').uniform();
 });
</script> 

</div>
