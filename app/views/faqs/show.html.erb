<%= javascript_tag "token = '#{form_authenticity_token}'" %>
<div class="content-section">

	<%= render :partial => "faq_replies", :locals => { :faq => @faq } %>

    <br>	
	
	<div style="float: left; text-align: right;">
  <%= link_to_function 'Reply', "faq_modal(null, 'Reply', #{@faq.id} )" %>
  <%= link_to 'Return to FAQs', faqs_path({:event=>@faq.parent.family_id}) %>
  </div>
	<% if (has_role?(Role::BUYER.to_sym) || has_role?(Role::ADMIN.to_sym)) %>
		<div class="faq-reply-visibility" style="float:right; padding-left: 30px;">Visibility:  <%= @faq.visibility %> 
		<%= link_to_function '(Edit)', "faq_modal(#{@faq.id}, 'Edit', #{@faq.parent_id})" %></div>
	<% end %>
	 
</div>

<div id="faq-form"> </div>

<%= render :partial => "/shared/confirm_dialog" %>