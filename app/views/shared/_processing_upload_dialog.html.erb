<div id="uploadPopup">  
    <h1>Please wait..</h1>  
    <p>  
        Please wait while we process your upload.  
    </p>  
    <p class="processing-image">  
        <img id="processingImage" src="images/processing.gif" style="visibility:hidden;" />  
    </p>  
</div>  
<div id="fadeInPopup"></div>

<script type="text/javascript">
var popupStatus = 0;
$("#uploadSubmit").click(function(){  
	//centering with css  
	centerPopup();  
	//load popup  
	showUploadPopup();
	window.setTimeout(ReallyAnimateMePlease, 100);
});
var ReallyAnimateMePlease = function ()
{ 
	// Have to turn on the animated gif in here to get around an IE problem where it won't run on submit.
	var dd = document.getElementById("processingImage");
	if(typeof (dd) == 'object') 
	{ 
	  dd.src = 'images/processing.gif';
	  dd.style.visibility = "visible";
	};
}
</script>


