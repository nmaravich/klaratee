<div class="content-section">
	
<div class="suppliers-minor-color long-heading">
<h3>Edit Contact</h3>
</div>
  
<% form_for(@contact, :html => {:class => 'uniForm'}) do |f| %>
  <%= f.error_messages %>
  
  <div style="display:block;clear:both;">
  <fieldset class="inlineLabels">
  
  <div class="ctrlHolder">
    <label>First Name</label>
    <%= f.text_field :f_name %>
  </div>
  <div class="ctrlHolder">
    <label>Last Name</label>
    <%= f.text_field :l_name %>
  </div>
  <div class="ctrlHolder">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="ctrlHolder">
    <label>Address 1</label>
    <%= f.text_field :address1 %>
  </div>
  <div class="ctrlHolder">
    <label>Address 2</label>
    <%= f.text_field :address2 %>
  </div>
  <div class="ctrlHolder">
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div class="ctrlHolder">
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
  <div class="ctrlHolder">
    <%= f.label :zip %>
    <%= f.text_field :zip %>
  </div>
  <div class="ctrlHolder">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number %>
  </div>
  <div class="ctrlHolder">
    <%= f.label :fax %>
    <%= f.text_field :fax %>
  </div>
  <div class="ctrlHolder">
    <%= f.label :comments %>
    <%= f.text_field :comments %>
  </div>
  <div class="ctrlHolder">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <%= @contact.dynamo_fields_p(f) %>
    <div class="ctrlHolder">
      <%= f.submit 'Update' %>
    </div>
  <% end %>
  
  </fieldset>
  </div>
	
  <%= link_to 'Back', url_for(:back) %>

<script type="text/javascript">
 $(function(){
   $('form.uniForm').uniform();
 });
</script> 

</div>