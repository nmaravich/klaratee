<div id="data-template-form" class="hide">
    <% @data_template = DataTemplate.new if @data_template.nil? %>
    <% form_for(@data_template) do |f| %>
      <%= f.error_messages %>
      <p>
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </p>
    <% end %>
</div>