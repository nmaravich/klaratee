<div class="content-section">
<% form_for :user, :url => {:action => 'forgot_password'} do |form| %>
    <h2>Password Reset Request</h2>
    <p>
        Enter your email address that we have on our file and click send. We will<br/> 
        send you a password reset link email to your email address.
    </p>
    <p>
        <label for="user_email">
            Email Address:
        </label>
        <br/>
        <%= form.text_field :email, :size => 35, :class => 'text' %>
    </p>
    <%= submit_tag 'Send' %>
<% end %>
</div>